    <div class="container">
        <div class="screen">
            <div class="screen__content">
                <form action="/add_user" method="post">


                    <div class="login__field"> 
                        <p>UserName</p>
                        <input type="text" name="user" class="login__input"  placeholder="Enter UserName">
                    </div>
                   
                    <div class="login__field">
                        <p>Password</p>
                        <input type="password" name="pass" class="login__input"  placeholder="enter Password">
                    </div>
                   
                    <input style="color: aliceblue;" class="login__submit" type="submit" name="" value="signup">
                    </form>
            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>		
                <span class="screen__background__shape screen__background__shape2"></span>
